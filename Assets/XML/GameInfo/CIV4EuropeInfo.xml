			<Type>EUROPE_EAST</Type>
			<Description>TXT_KEY_COMMAND_SAIL_SPICE_ROUTE</Description>
      <Strategy>TXT_KEY_AUTO_SELL_SPICE_ROUTE_HELP</Strategy>
      <Help>AI Route</Help>
			<Direction>east</Direction>
      <DirectionArrays>
        <DirectionArray>
